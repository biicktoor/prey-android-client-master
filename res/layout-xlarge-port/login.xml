<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg" >

    <include layout="@layout/header_port" />

    <Button
        android:id="@+id/login_btn_cp"
        style="@style/PreyButton.XLarge"
        android:layout_above="@+id/login_btn_settings"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/login_cp" />

    <Button
        android:id="@+id/login_btn_settings"
        style="@style/PreyButton.XLarge"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/manage_prey_settings" />

</RelativeLayout>
