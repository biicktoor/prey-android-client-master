<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PreyTheme" parent="@android:style/Theme.Black">
        <item name="android:background">@null</item>
    </style>
    
    <style name="PreyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PreyButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_bg_selector</item>
    </style>

    <style name="PreyButton.Large">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="PreyButton.XLarge">
        <item name="android:textSize">45dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="PreyButton.Camouflage">
        <item name="android:background">@drawable/button_camouflage_selector</item>
    </style>

    <style name="PreyButton.Large.Camouflage">
        <item name="android:background">@drawable/button_camouflage_selector</item>
    </style>

    <style name="PreyButton.XLarge.Camouflage">
        <item name="android:background">@drawable/button_camouflage_selector</item>
    </style>

    <style name="PreyEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@drawable/input_text</item>
        <item name="android:ems">8</item>
    </style>

    <style name="PreyEditText.Large">
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="PreyEditText.XLarge">
        <item name="android:layout_height">96dp</item>
        <item name="android:textSize">33dp</item>
    </style>

    <style name="Theme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Theme.Transparent" parent="android:Theme">
   		 <item name="android:windowIsTranslucent">true</item>
   		 <item name="android:windowBackground">@android:color/transparent</item>
   		 <item name="android:windowContentOverlay">@null</item>
   		 <item name="android:windowNoTitle">true</item>
   		 <item name="android:windowIsFloating">true</item>
   		 <item name="android:backgroundDimEnabled">false</item>
 	 </style>

</resources>
